<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
    <%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%> 
<!DOCTYPE html>
<html>
<head>
<title>学生成绩</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="scripts/jquery.min.js"></script>
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <link rel="stylesheet" href="css/layout.css">
  <script src="scripts/bootstrap.min.js"></script>
  <style>
      #content-list {
        font-size: 2em;
      }
  </style>
</head>
<body>
<div id="container">
      <%@ include  file="header.jsp"%>
  </div>
 <div id="left-list">
      <jsp:include  page="menu.jsp"/>
 </div>
 <div id="content-list">
<form action="score.do" method="post">
<input type="submit" value="提交"><br>

<table>
        <caption>用户列表</caption>
        <thead>
            <tr>
                <th>科目名称</th>
                <th>科目成绩</th>
                <th>考试时间</th></tr>
        </thead>
        <tbody id="lis">
            <c:forEach items="${score1 }" var="node">  
      <tr>
        <td><c:out value="${node.subject_name }"></c:out></td>
        <td><c:out value="${node.score}"></c:out></td>
        <td><c:out value="${node.score_time}"></c:out></td>
      
      </tr>
   </c:forEach>  
        </tbody>
    </table>
</form>
</div>
<script>
   
    //dom加载过程中动态计算背景高度
    $(document).ready (function (){
        var height = $("#content-list").offset().top;
        $("#content-list").height($(document).height()-height-10);
        $("#left-list").height($(document).height()-height-10);
        var page = (window.location.href.split("&"))[1].substr(5);
        $(".pagination").children().eq(page).addClass("active");
      });
</script>
</body>
</html>