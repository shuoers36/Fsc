        <button value="发布新公告" id="create-notice">发布新公告</button>
      </div>
      <div id="new-notice">
        <h3>新公告</h3>
        <article></article>
        <input type="submit" value="确认">
        <input type="submit" value="取消">
      </div>
    </div>
    <div id="footer">
      <h3>Powered By Xidian-Java 16</h3>
    </div>
    <script>
      window.onload = function () {
        this.location.href = "#school-brief";
      }
      var createNotice = document.getElementById("create-notice");
      var newNotice = document.getElementById('new-notice')
      createNotice.onclick = function () {
          newNotice.style.display = "block";
      }
