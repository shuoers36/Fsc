<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
 
<!DOCTYPE html>
<html>
<head>
<title>留言</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="scripts/jquery.min.js"></script>
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <link rel="stylesheet" href="css/layout.css">
  <script src="scripts/bootstrap.min.js"></script>
	<style>
		#content-list {
        font-size: 3em;
      }
	</style>
</head>
<body>
<div id="container">
      <%@ include  file="header.jsp"%>
  </div>
 <div id="left-list">
      <jsp:include  page="menu.jsp"/>
 </div>
 <div id="content-list">
<form action="message.do" method="post">
	<table border="1">
        <caption>已发送</caption>
        <thead>
            <tr>
                <th>主题</th>
                <th>收件人</th>
                <th>日期</th>
                <th>删除</th></tr>
        </thead>
        <tbody id="lis">
            <c:forEach items="${nulist}" var="node">
      <tr>
        <td><a href="<%=request.getContextPath() %>/message.do?type=detail&detail_id=${node.message_id}"><c:out value="${node.message_title}"></c:out></a></td>
        <td><c:out value="${node.addressee_name}"></c:out></td>
        <td><c:out value="${node.timeToString}"></c:out></td>
        <%-- <td><input type="button" name="del" value="delete" onclick="mfSubmit(${node.message_id})" ></td> --%>
        <!-- 通过button传参数 -->
        <td><input type="button" onclick="window.location.href='<%=request.getContextPath() %>/message.do?type=delete&message_id=${node.message_id}'"  value="删除"></td>
      </tr>
   </c:forEach>  
        </tbody>
    </table>
    
    
    
    <table border="1">
        <caption>已接受</caption>
        <thead>
            <tr>
                <th>主题</th>
                <th>发件人</th>
                <th>日期</th>
                <th>删除</th></tr>
        </thead>
        <tbody id="lisss">
            <c:forEach items="${nulist1}" var="node">
      <tr>
        <td><a href="<%=request.getContextPath() %>/message.do?type=detail&detail_id=${node.message_id}"><c:out value="${node.message_title}"></c:out></a></td>
        <td><c:out value="${node.addresser_name}"></c:out></td>
        <td><c:out value="${node.timeToString}"></c:out></td>
        <%-- <td><input type="button" name="del" value="delete" onclick="mfSubmit(${node.message_id})" ></td> --%>
        <!-- 通过button传参数 -->
        <td><input type="button" onclick="window.location.href='<%=request.getContextPath() %>/message.do?type=delete&message_id=${node.message_id}'"  value="删除"></td>
      </tr>
   </c:forEach>  
        </tbody>
    </table>
    
</form>
<input type="button" onclick="window.location.href='http://localhost:8090/fsc/messageInsert.jsp'"  value="新建留言">

</div>

<script type="text/javascript">
  
 window.onload = function (){
    $.post("message.do?type=query", function (nlist){
  	 $("body").html(nlist); 
    });   
 };
 
/* function mfSubmit(id){
	
	document.getElementById("message_id").value = id;
	
	document.getElementById("myform").submit();
} */

</script>



</body>
</html>